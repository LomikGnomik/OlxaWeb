@using OlxaWeb.Domain.Entities
@model IEnumerable<Temmplate>
@{
    ViewBag.Current = "Develop";
    ViewBag.SubMenu = "Template";
    ViewBag.Title = "Готовые сайты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <!--Add modifier class : "pt-fullwidth" to stretch page title and make it occupy 100% of the page width. -->
    <section class="page-title">
        <div class="container">
            <div class="inner">
                <div class="column">
                    <div class="title">
                        <h1>Разработка</h1>
                    </div><!-- .title -->
                </div><!-- .column -->
                <div class="column">
                    <ul class="menu-title text-center">
                        <li class="active"><a href="#"> Готовые решения</a></li>
                        <li>@Html.ActionLink("Индивидуальные", "Individual", "Develop")</li>
                        <li>@Html.ActionLink("Эксклюзивные", "Exclusive", "Develop")</li>
                    </ul><!-- .nav-filters -->
                </div><!-- .column -->
            </div>
        </div>
    </section><!-- .page-title -->
    <!-- Content -->
    <section class="container">
        <h2 class="block-title text-center">
            Готовые Сайты Для Вашего Бизнеса
            <small> Наиболее Быстрое и Простое Решение</small>
        </h2>
        <!-- Filters -->
        <div class="text-center padding-top">
            @if (User.IsInRole("Admin"))
            {
                <div class="column">
                <div class="social-bar" style="float:left">
                    <a href="~/Develop/CreateTemplate/" class="sb-skype" data-toggle="tooltip" data-placement="top" title="Добавить">
                        <i class="fa fa-plus text-danger"></i>
                    </a>
                </div>
            </div>
            }
            <ul class="nav-filters space-bottom-2x text-center">
                <li class="active"><a href="#" data-filter="*">Все</a></li>
                @foreach (var category in ViewBag.Filter)
            {
                    <li><a href="#" data-filter=".@category">@category</a></li>
                }
            </ul><!-- .nav-filters -->
        </div>
        <!-- Portfolio Grid -->
        <div class="grid isotope-grid col-3 filter-grid">
            <div class="grid-sizer"></div>
            <div class="gutter-sizer"></div>

            @foreach (var Site in @Model)
            {
                <!-- Portfolio Item -->
                <div class="grid-item @Site.Category">
           @if(User.IsInRole("Admin")){
                    <div class="column">
                        <div class="social-bar" style="float:right">
                            <a href="~/Develop/EditCard/@Site.Id" class="sb-skype" data-toggle="tooltip" data-placement="top" title="Редактировать">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/Develop/DeleteTemplate/@Site.Id" class="sb-facebook" data-toggle="tooltip" data-placement="top" title="Удалить">
                                <i class="fa fa-window-close text-danger"></i>
                            </a>
                            @if (Site.Publish == true)
                            {
                                <a href="~/Develop/PublishTemplate/@Site.Id" class="sb-twitter" data-toggle="tooltip" data-placement="top" title="Скрыть с публикации">
                                    <i class="fa fa-minus-square" style="color:#808080"></i>
                                </a>
                            }
                            else
                            {
                                <a href="~/Develop/PublishTemplate/@Site.Id" class="sb-twitter" data-toggle="tooltip" data-placement="top" title="Опубликовать">
                                    <i class="fa fa-plus-square" style="color:#00ff21"></i>
                                </a>
                            }
                        </div>
                    </div>
            }
                    <div class="portfolio-item">
                        <div class="thumbnail">
                            <img src="~/Content/img/TemplateSitePicture/@Site.LinkPicture" alt="Portfolio" />
                            <a href="#" class="portfolio-title btn btn-ghost-sm"> демо </a>
                            <a href="~/Develop/Card/@Site.Id" class="portfolio-title btn btn-ghost-sm1"> подробнее </a>
                        </div>
                        <table class="table-title">
                            <tr>
                                <td class="border-bottom-none"> <a href="~/Develop/Card/@Site.Id" style="border-bottom:none;">@Site.Category</a></td>
                                <td class="btn btn-ghost">@Site.Price <i class="fa fa-rub text-lg" aria-hidden="true"></i></td>
                            </tr>
                        </table>
                    </div>
                </div><!-- .grid-item.identity -->
            }
        </div><!-- .isotope-masonry-grid -->
        <!-- Load More Button -->
        @*<div class="text-center padding-top">
                <a href="#" class="btn btn-primary btn-ghost waves-effect">Load More</a>
            </div>*@
    </section><!-- .container -->
</div>
<!-- CTA -->
<section class="fw-section-bg">
    <div class="container padding-top text-center">
        <div class="row">
            <div class="text-center-bg no-bottom">
                Схема сотрудничества
            </div>
            <div class="text-center">
                <ul class="nav-tabs nav-pills" role="tablist">
                    <li class="active"><a href="#tab7" role="tab" data-toggle="tab"><i class="flaticon-commerce"></i><br />Покупка</a></li>
                    <li><a href="#tab8" role="tab" data-toggle="tab"><i class="flaticon-cogwheel"></i><br />Настройка</a></li>
                    <li><a href="#tab9" role="tab" data-toggle="tab"><i class="flaticon-transport"></i><br />Запуск</a></li>
                    <li><a href="#tab10" role="tab" data-toggle="tab"><i class="flaticon-computer"></i><br />Поддержка</a></li>
                </ul><!-- .nav-tabs -->
            </div><!-- .text-center -->
            <!-- Tab panes -->
            <div class="col-md-10 col-md-offset-1">
                <div class="tab-content tab-content-bg">
                    <div role="tabpanel" class="tab-pane transition fade in active" id="tab7"> 1. выбор и оплата готового решения<br /><br />Выбрав подходящее готовое решение из каталога, Вы можете сделать покупку через наш сайт, при этом сразу предоставить всю необходимую информацию во время заказа, а можете просто позвонить нам. На этом этапе Вы оплачиваете 50% от стоимости проекта. После получения предоплаты и материалов необходимых для сайта таких как: логотип, текстовые документе для наполнения сайта, фотографии мы сразу начинаем работу.</div>
                    <div role="tabpanel" class="tab-pane transition fade scale" id="tab8">2. настройка сайта под нужды Вашего бизнеса <br /><br />На основе предоставленных материалов и Ваших предпочтений, мы наполняем сайт, настраиваем цветовое оформление и тестируем его работу. После чего сайт передаётся на согласование с Вами</div>
                    <div role="tabpanel" class="tab-pane transition fade scaledown" id="tab9">3. публикация сайта в интернете <br /><br />После одобрения и получения оставшихся 50% от стоимости проекта, мы выкладываем сайт на хостинг, предоставляя Вам все доступы к системе администрирования.</div>
                    <div role="tabpanel" class="tab-pane transition fade left" id="tab10">4. обслуживание и дополнительные услуги<br /><br />После выкладки сайта осуществляется техническая поддержка. В случае обнаружения ошибки в работе сайта или возникновения вопроса вы всегда сможете обратиться к нам. Возможны доработки сайта под Ваши нужды, оплата в этом случае берётся за время разработки. Несмотря на то что готовые решения делаются максимально подходящими под нужды конкретной отрасли. И в них присутствует базовая поисковая оптимизация, благодаря которой наши сайты лучше индексируются поисковыми роботами(Yandex, Google) .Но это не даёт гарантий нахождения в первых строках выдачи по ключевым запросам. Для дальнейшего успешного продвижения Вашего сайта рекомендуем воспользоваться SEO.</div>
                </div><!-- .tab-content -->
            </div>
        </div><!-- .row -->
    </div><!-- .container -->
</section><!-- .fw-section.next-to-footer -->

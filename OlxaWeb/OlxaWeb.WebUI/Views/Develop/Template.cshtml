@using OlxaWeb.Domain.Entities
@model IEnumerable<Temmplate>
@{
    ViewBag.Current = "Develop";
    ViewBag.SubMenu = "Template";
    ViewBag.Title = "Готовые сайты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <!--Add modifier class : "pt-fullwidth" to stretch page title and make it occupy 100% of the page width. -->
    <section class="page-title">
        <div class="container">
            <div class="inner">
                <div class="column">
                    <div class="title">
                        <h1>Разработка</h1>
                    </div><!-- .title -->
                </div><!-- .column -->
                <div class="column">
                    <ul class="menu-title text-center">
                        <li class="active"><a href="#"> Готовые решения</a></li>
                        <li>@Html.ActionLink("Индивидуальные", "Individual", "Develop")</li>
                        <li>@Html.ActionLink("Эксклюзивные", "Exclusive", "Develop")</li>
                    </ul><!-- .nav-filters -->
                </div><!-- .column -->
            </div>
        </div>
    </section><!-- .page-title -->
    <!-- Content -->
    <section class="container">
        <h2 class="block-title text-center">
            Готовые Сайты Для Вашего Бизнеса
            <small> Наиболее Быстрое и Простое Решение</small>
        </h2>
        <!-- Filters -->
        @*@Html.DropDownList("Category", new SelectList(new string[] { "Лендинг", "Интернет-магазин", "Корпаративный" }), "Категории")*@
        <div class="text-center padding-top">
            @if (User.IsInRole("Admin"))
            {
                <div class="column">
                <div class="social-bar" style="float:left">
                    <a href="~/Develop/CreateTemplate/" class="sb-skype" data-toggle="tooltip" data-placement="top" title="Добавить">
                        <i class="fa fa-plus text-danger"></i>
                    </a>
                </div>
            </div>
            }
            <ul class="nav-filters space-bottom-2x text-center">
                <li class="active"><a href="#" data-filter="*">Все</a></li>
                @foreach (var category in ViewBag.Filter)
            {
                    <li><a href="#" data-filter=".@category">@category</a></li>
                }
            </ul><!-- .nav-filters -->
        </div>
        <!-- Portfolio Grid -->
        <div class="grid isotope-grid col-3 filter-grid">
            <div class="grid-sizer"></div>
            <div class="gutter-sizer"></div>

            @foreach (var Site in @Model)
            {
                <!-- Portfolio Item -->
                <div class="grid-item @Site.Category">
           @if(User.IsInRole("Admin")){
                    <div class="column">
                        <div class="social-bar" style="float:right">
                            <a href="~/Develop/EditCard/@Site.Id" class="sb-skype" data-toggle="tooltip" data-placement="top" title="Редактировать">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/Develop/DeleteTemplate/@Site.Id" class="sb-facebook" data-toggle="tooltip" data-placement="top" title="Удалить">
                                <i class="fa fa-window-close text-danger"></i>
                            </a>
                            @if (Site.Publish == true)
                            {
                                <a href="#" class="sb-twitter" data-toggle="tooltip" data-placement="top" title="Скрыть с публикации">
                                    <i class="fa fa-minus-square" style="color:#808080"></i>
                                </a>
                            }
                            else
                            {
                                <a href="#" class="sb-twitter" data-toggle="tooltip" data-placement="top" title="Опубликовать">
                                    <i class="fa fa-plus-square" style="color:#00ff21"></i>
                                </a>
                            }
                        </div>
                    </div>
            }
                    <div class="portfolio-item">
                        <div class="thumbnail">
                            <img src="~/Content/img/1478172823164455436.png" alt="Portfolio" />
                            <a href="#" class="portfolio-title btn btn-ghost-sm"> демо </a>
                            <a href="~/Develop/Card/@Site.Id" class="portfolio-title btn btn-ghost-sm1"> подробнее </a>
                        </div>
                        <table class="table-title">
                            <tr>
                                <td class="border-bottom-none"> <a href="~/Develop/Card/@Site.Id" style="border-bottom:none;"> @Site.Category</a></td>
                                <td class="btn btn-ghost">12 000 <i class="fa fa-rub text-lg" aria-hidden="true"></i></td>
                            </tr>
                        </table>
                    </div>
                </div><!-- .grid-item.identity -->
            }
        </div><!-- .isotope-masonry-grid -->
        <!-- Load More Button -->
        @*<div class="text-center padding-top">
                <a href="#" class="btn btn-primary btn-ghost waves-effect">Load More</a>
            </div>*@
    </section><!-- .container -->
</div>

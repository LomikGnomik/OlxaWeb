@model IList<OlxaWeb.Domain.Entities.Post>


<div class="container">
    <br>
    <h2 class="block-title">
        <small>Полезная информация по теме : <a href="~/Blog?category=@ViewBag.Category&page=1">@ViewBag.Category</a></small>
    </h2>
    <div class="row">
        @{
            int count = Model.Count() - 1;

                for (int a = 3; a > 0; a--)
                {
                    <div class="col-sm-4">
                        <ul class="list-featured">
                            @for (int b = 4; b > 0; b--)
                            {
                                    <li>
                                        @if (count >= 0 )
                                        {
                                        <a href="~/Blog/Post/@Model[count].Id" class="no-border">@Model[count].Title</a>
                                        }
                                    </li>
                                count--;
                            }
                        </ul>
                    </div>
                }
            }
    </div>
</div>